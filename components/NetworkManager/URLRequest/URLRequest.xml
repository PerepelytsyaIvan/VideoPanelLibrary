<component name="URLRequest" extends="node">
    <script type="text/brightscript" uri="URLRequest.brs"/>
    <script type="text/brightscript" uri="pkg:/components/NetworkManager/util.brs"/>
    
    <interface>
        <field id="path" type="string"/>
        <field id="cacheExpiredInterval" type="integer"/>        
        <field id="headerParameters" type="assocarray"/>
        <field id="pathArgument" type="string"/>
        <field id="url" type="string"/>
        <field id="method" type="string" value="GET"/>
        <field id="body" type="assocarray"/>
        <field id="arrayBody" type="array"/>
        <field id="context" type="assocarray"/>
        <field id="querryParams" type="assocarray"/>        
        
        <function name="getUrl"/>
        <function name="getBody"/>
        <function name="getHeaders"/>        
    </interface>
</component>